<div class="ui">
	<h1>Upload RPM Package</h1>
	{{template "base/alert" .}}
	<form class="ui form" action="{{.Link}}/upload" method="post" enctype="multipart/form-data">
		{{.CsrfTokenHtml}}

		<input name="package_repo" type="hidden" value="{{.PackageUploadRepo}}">

		<div class="field">
			<label for="package_file">The Package:</label>
			<input name="package_file" type="file" accept=".rpm" required>
		</div>

		<div class="field">
			<button class="ui green button">Upload</button>
		</div>
	</form>
</div>
